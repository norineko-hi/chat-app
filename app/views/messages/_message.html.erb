
  <div class="message">
    <div class="m_line1">
      <div class="m_user">
        <%= message.user.name %>
      </div>
      <div class="m_date">
        <%= l message.created_at %>
      </div>
    </div>
    <div class="m_line2">
      <div class="m_message">
        <%= message.content %>
      </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </div>
  </div>